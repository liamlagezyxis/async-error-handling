{
  "configurations": [
    {
      "name": "Awaited",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "runtimeVersion": "default",
      "program": "${workspaceFolder}/dist/index.js",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "args": [
        "--awaited"
      ]
    },
    {
      "name": "Non-Awaited",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "runtimeVersion": "default",
      "program": "${workspaceFolder}/dist/index.js",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "args": [
        "--unawaited"
      ]
    },
    {
      "name": "Non-Awaited with Error Handling",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "runtimeVersion": "default",
      "program": "${workspaceFolder}/dist/index.js",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "args": [
        "--unawaited-error-handled"
      ]
    }
  ]
}